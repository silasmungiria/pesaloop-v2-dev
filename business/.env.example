# ========================
# Debug and Security
# ========================
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*,127.0.0.1,localhost,192.168.100.80

# ========================
# Local Development URLs
# ========================
FRONTEND_LOCAL_URL=http://localhost:3000
BACKEND_LOCAL_URL=http://localhost:8000

# ========================
# Production Deployment URLs
# ========================
FRONTEND_PRODUCTION_URL=https://www.yourdomain.com
BACKEND_PRODUCTION_URL=https://api.yourdomain.com

# ========================
# Database (PostgreSQL)
# ========================
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432

# ========================
# Email Configuration
# ========================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_TIMEOUT=10
EMAIL_BATCH_SIZE=100             # Used if implementing bulk throttled sending
EMAIL_BATCH_DELAY=2              # Delay in seconds between batches

EMAIL_HOST_USER=your@email.com
EMAIL_HOST_PASSWORD=your-email-password

EMAIL_ALERTS=your-alerts-email@example.com
EMAIL_REPLY_TO=your-reply-to-email@example.com
EMAIL_SUPPORT=your-support-email@example.com
EMAIL_SYS_ADMIN=your-admin-email@example.com

# ========================
# Celery
# ========================
CELERY_BROKER_URL=redis://localhost:6379/0

# ========================
# Cryptography
# ========================
DB_ENCRYPTION_KEY=your-crypto-key
PAYLOAD_ENCRYPTION_KEY=your-qr-key

# ========================
# Twilio (SMS Service)
# ========================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_SMS_FROM=+1234567890

# ========================
# Exchange Rates API
# ========================
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4/latest
EXCHANGE_API_KEY=your-exchange-api-key

# ========================
# M-Pesa (Safaricom Daraja)
# ========================
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_TOKEN_ENDPOINT=https://sandbox.safaricom.co.ke/oauth/v1/generate?grant_type=client_credentials
MPESA_STK_PUSH_ENDPOINT=https://sandbox.safaricom.co.ke/mpesa/stkpush/v1/processrequest
MPESA_BUSINESS_SHORTCODE=174379
MPESA_PARTY_B_SHORTCODE=174379
DARAJA_CALLBACK_SECRET_TOKEN=your-daraja-callback-secret
